@model WebApplication.ViewModels.Timeline.UserTimelineVM

@{
    Layout = "_Layout";
}

<h2>@ViewData["title"]</h2>

@{
    if (User.Identity.IsAuthenticated)
    {
        <div class="twitbox">
            <h3>What's on your mind @User.Identity.Name?</h3>
            <form asp-controller="Timeline" asp-action="AddMessage">
                <p>
                    <input type="text" name="text" size="60">
                    <input type="submit" value="Share">
                </p>
            </form>
        </div>
    }
}

<partial name="Partials/TimelineMessages" model="@Model.Messages" />