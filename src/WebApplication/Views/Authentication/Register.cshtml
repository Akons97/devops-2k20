@model WebApplication.Models.Authentication.RegisterModel
@Html.ValidationSummary()
@{
    Layout = "_Layout";
}

<h2>Sign up</h2>

<form asp-controller="Authentication" asp-action="Register" autocomplete="off">
    <label>
        <span>Username:</span>
        <input type="text" name="username" value="" required>
    </label>
    <label>
        <span>Email:</span>
        <input type="text" name="email" value="" required>
    </label>
    <label>
        <span>Password:</span>
        <input type="password" name="pwd" id="register-password" value="" required>
    </label>
    <br>
    <input type="submit" value="Sign Up">
</form>
